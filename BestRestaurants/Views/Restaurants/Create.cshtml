@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant;

<h4>Add a new restaurant</h4>
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { required = "required" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.PhoneNumber)
    @Html.TextBoxFor(model => model.PhoneNumber, new { required = "required" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Cuisine)
    @Html.DropDownList("CuisineId", ViewBag.CuisineId, null, new { required = "required" })
  </div>

  <input type="submit" value="Add new restaurant" />
}

<hr />
<p class="link">@Html.ActionLink("Back to list of restaurants", "Index")</p>
<p class="link">@Html.ActionLink("Go to Home", "Index", "Home")</p>