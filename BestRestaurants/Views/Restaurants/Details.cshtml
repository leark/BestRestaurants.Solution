@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<h3>Restaurant Details</h3>

<h4>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h4>
<h4>@Html.DisplayNameFor(model => model.PhoneNumber): @Html.DisplayFor(model => model.PhoneNumber)</h4>
<h4>Cuisine: @ViewBag.Cuisine.Name</h4>
<hr />
<p class="link">@Html.ActionLink($"Edit {@Model.Name}", "Edit", new { id = Model.RestaurantId })</p>
<p class="link">@Html.ActionLink("Delete this restaurant", "Delete", new { id = Model.RestaurantId })</p>
<hr />
<p class="link">@Html.ActionLink("Back to list of restaurants", "Index")</p>
<p class="link">@Html.ActionLink("Go to Home", "Index", "Home")</p>