@{
  Layout = "_Layout";
}
@using BestRestaurants.Models;

<h2>List of Restaurants</h2>

@if (@Model.Count == 0)
{
  <h3>No restaurants to list</h3>
}
else
{
  <ul>
    @foreach (Restaurant restaurant in Model)
    {
      <li>@Html.ActionLink($"{restaurant.Name} : {restaurant.Cuisine.Name}", "Details", new { id = restaurant.RestaurantId
    })</li>
    }
  </ul>
}

<p class="link">@Html.ActionLink("Add new restaurant", "Create")</p>
<hr />
<p class="link">@Html.ActionLink("Go to Home", "Index", "Home")</p>