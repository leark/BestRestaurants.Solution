@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<h3>Edit</h3>

<h4>Edit this restaurant: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RestaurantId)

  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { required = "required" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.PhoneNumber)
    @Html.TextBoxFor(model => model.PhoneNumber, new { required = "required" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Cuisine)
    @Html.DropDownList("CuisineId", ViewBag.CuisineId, null, new { required = "required" })
  </div>

  <input type="submit" value="Save changes" />
}

<hr />
<p class="link">@Html.ActionLink("Back to list", "Index")</p>
<p class="link">@Html.ActionLink("Go to Home", "Index", "Home")</p>