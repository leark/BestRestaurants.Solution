@{
  Layout = "_Layout";
}
@using BestRestaurants.Models;

<h2>List of Cuisines</h2>

@if (@Model.Count == 0)
{
  <h3>No cuisines to list</h3>
}
else
{
  <ul>
    @foreach (Cuisine cuisine in Model)
    {
      <li>@Html.ActionLink($"{cuisine.Name} : {cuisine.Region}", "Details", new { id = cuisine.CuisineId })</li>
    }
  </ul>
}

<p class="link">@Html.ActionLink("Add new cuisine", "Create")</p>
<p class="link">@Html.ActionLink("Go to Home", "Index", "Home")</p>